@using hometask_16.Models

@model List<Group>

<div class="container mt-4">
    <div class="cards row">
        @foreach (var item in @Model)
        {

            <div class="d-flex justify-content-between card-body border col-4 p-4 m-3">
                <div>
                    <h5 class="card-title">@item.GroupNo </h5>
                    <p class="card-text">@item.Name </p>
                </div>
                <div class="d-flex align-self-center">
                    <button class="groupBTN btn btn-outline-success p-0 ps-2 pe-2 h-25">
                        <a class="groupDetail" style="text-decoration:none; color:forestgreen;" href="/group/no/@item.Id">Full Details</a>
                    </button>

                </div>
            </div>

        }
    </div>
</div>
